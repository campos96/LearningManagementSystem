@model LearningManagementSystem.Models.LoginViewModel
@{
    Layout = "_LayoutAuth";
    ViewData["Title"] = "Login";
}

<div class="card shadow p-2 p-md-4" style="min-width: 400px;">
    <div class="card-body">
        <h3 class="card-title text-center pt-3 pb-5">@ViewData["Title"]</h3>
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" />
                <label asp-for="Username" class="control-label"></label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-1">
                <input asp-for="Password" class="form-control" type="password" />
                <label asp-for="Password" class="control-label"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check form-switch mb-3">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" role="switch">
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-warning w-100">
                    Login
                </button>
                <a asp-action="Register" class="btn btn-dark w-100 mt-2">Register</a>
            </div>
        </form>
        <div class="row">
            <div class="col-12 mt-3 text-center text-muted">
                <p>&copy; 2022 LMS</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }