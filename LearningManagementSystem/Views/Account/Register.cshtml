@model LearningManagementSystem.Models.RegisterViewModel

@{
    Layout = "_LayoutAuth";
    ViewData["Title"] = "Register";
}

<div class="card shadow p-2 p-md-4" style="min-width: 400px;">
    <div class="card-body">
        <h3 class="card-title text-center pt-3 pb-5">@ViewData["Title"]</h3>
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-xxl-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Username" class="form-control" />
                        <label asp-for="Username" class="control-label"></label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xxl-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" />
                        <label asp-for="Email" class="control-label"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xxl-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" />
                        <label asp-for="Name" class="control-label"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xxl-6 mb-3">
                    <div class="form-floating">
                        <input asp-for="Lastname" class="form-control" />
                        <label asp-for="Lastname" class="control-label"></label>
                        <span asp-validation-for="Lastname" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xxl-6 mb-3">
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" type="password" />
                        <label asp-for="Password" class="control-label"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-xxl-6 mb-3">
                    <div class="form-floating mb-3">
                        <input asp-for="PasswordConfirmation" class="form-control" type="password"/>
                        <label asp-for="PasswordConfirmation" class="control-label"></label>
                        <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-xxl-6 mb-3">
                    <button type="submit" class="btn btn-warning w-100">Register</button>
                    <a asp-action="Login" class="btn btn-dark w-100 mt-2">Login</a>
                </div>
            </div>
        </form>
        <div class="row">
            <div class="col-12 mt-3 text-center text-muted">
                <p>&copy; 2022 LMS</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }